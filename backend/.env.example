# SAGE Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=SAGE
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:4000", "http://127.0.0.1:4000"]

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# For local development: leave empty to use SQLite (sage.db)
# For Fly Postgres: postgres://user:password@host:5432/sage
DATABASE_URL=

# Optional: Supabase (alternative to direct PostgreSQL)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# =============================================================================
# Vector Store (Pinecone)
# =============================================================================
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=
PINECONE_INDEX_NAME=sage-guides

# =============================================================================
# AI Services
# =============================================================================
# Anthropic Claude (for RAG chat responses)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (for text embeddings)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_RAG_CHAT=true
ENABLE_CHANGE_DETECTION=true

# Scraping settings
SCRAPE_INTERVAL_HOURS=24
